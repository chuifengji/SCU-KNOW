page{
  margin: 0;
  padding: 0;
}
.con {
  width: 670rpx;
  /* height: 224rpx; */
  border-radius: 50rpx;
  margin-top: 34rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  min-height: 224rpx;
  position: relative;
  left: -750rpx;
  animation: movetab .8s;
  animation-iteration-count:1;
  animation-fill-mode : forwards;
}
.question_title {
  min-height: 40rpx;
  width: 620rpx;
  box-sizing: border-box;
  padding-top: 30rpx;
  /* height: 40rpx; *//* left: 52rpx;
  top: 30rpx; */
  padding-left: 52rpx;
  font-weight: bold;
  font-size: 33rpx;
}
.question_content {
  height: 120rpx;
  width: 630rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
  padding-left: 110rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
  overflow: hidden;
}
@keyframes movetab
{
from {transform: translateX(0);opacity: 0}
to {transform: translateX(750rpx);opacity:1}
}