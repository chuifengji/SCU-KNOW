/**index.wxss**/
page {
  height: 100%;
  width: 100%;
  overflow: hidden;
  padding: 0;
  margin: 0;
}
.content-index{
  width: 100%;
  position: relative;
}
.hidden-scoll{
  width:750rpx;position:relative;height:80rpx;overflow-y:hidden;box-sizing: border-box;margin-top:30rpx;  margin-bottom: 30rpx;
}
.tab-content {
  position: relative;
  width: 750rpx;
  overflow: hidden;
  height: calc(100% - 140rpx);

}
.tab-container{
  position: relative;
  width: 100%;
  height: 80rpx;
  overflow-x:auto;overflow-y:hidden;padding-bottom:40rpx;
}


@media (min-width: 480px) {
  /* 仅在 480px 或更宽的屏幕上生效的样式规则 */
 .tab-content {
  position: relative;
  width: 750rpx;
  overflow: hidden;
  height: calc(100% - 100rpx)
}
.tab-container{
  position: relative;
  width: 100%;
  height: 120rpx;
  top: 20rpx;
}
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.tab-items {
  height: 80rpx;
  box-sizing: content-box;
  overflow-x: auto;
  line-height: 80rpx;
  white-space: nowrap;
  position: absolute;
  z-index: 1;
}
.tab-bg {
  width: 198rpx;
  height: 80rpx;
  border-radius: 40rpx;
  position: absolute;
  left: 40rpx;
  display: inline-block;
  z-index: -1;
}
.tab-item {
  display: inline-block;
  color: #999;
  font-size: 30rpx;
  width: 198rpx;
  position: relative;
  text-align: center;
}
.item-block{
  display: inline-block;
  width: 40rpx;
  height: 80rpx;
  position: relative;
}
.flex-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.scoll-h {
  height: 100%;
  width: 800rpx;
  padding-right: 50rpx;
  overflow-x: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.forSearchBox{
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 150rpx;
}